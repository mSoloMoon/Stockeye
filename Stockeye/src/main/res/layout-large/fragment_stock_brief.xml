<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/fragment_stock_margin_left"
    android:background="@color/drawer_background"
    android:orientation="vertical" >

    <TextView android:id="@+id/stock_period_decorator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/fragment_stock_margin_right"
        android:layout_gravity="right"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="" />

    <TextView android:id="@+id/stock_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="" />

    <TextView android:id="@+id/stock_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <TextView android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/fragment_stock_divider_margin_left"
        android:layout_marginRight="@dimen/fragment_stock_divider_margin_right"
        android:background="@color/goldentea" />

    <TextView android:id="@+id/stock_close_price"
        style="@style/fragment_stock_brief_text_large_theme"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView android:id="@+id/stock_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/fragment_stock_margin_right"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/fragment_stock_divider_margin_left"
        android:layout_marginRight="@dimen/fragment_stock_divider_margin_right"
        android:background="@color/goldentea" />

    <TextView android:id="@+id/stock_last_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/fragment_stock_margin_left"
        android:layout_marginRight="@dimen/fragment_stock_margin_right"
        android:gravity="right"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView android:id="@+id/stock_open_price"
        style="@style/fragment_stock_brief_text_large_theme"
        android:text=""
        android:textColor="@color/white" />

    <TextView android:id="@+id/stock_highest_price"
        style="@style/fragment_stock_brief_text_large_theme"
        android:text=""
        android:textColor="@color/white" />

    <TextView android:id="@+id/stock_lowest_price"
        style="@style/fragment_stock_brief_text_large_theme"
        android:text=""
        android:textColor="@color/white" />

    <TextView android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/fragment_stock_divider_margin_left"
        android:layout_marginRight="@dimen/fragment_stock_divider_margin_right"
        android:background="@color/goldentea" />

    <TextView android:id="@+id/stock_price_count"
        style="@style/fragment_stock_brief_text_large_theme"
        android:text=""
        android:textColor="@color/white" />

    <TextView android:id="@+id/stock_tran_count"
        style="@style/fragment_stock_brief_text_large_theme"
        android:text=""
        android:textColor="@color/white" />

    <TextView android:id="@+id/stock_volume"
        style="@style/fragment_stock_brief_text_large_theme"
        android:text=""
        android:textColor="@color/white" />

    <TextView android:id="@+id/stock_money"
        style="@style/fragment_stock_brief_text_large_theme"
        android:text=""
        android:textColor="@color/white" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkgray"
    android:orientation="vertical" >

    <TextView android:id="@+id/stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/fragment_stock_margin_left"
        android:layout_marginRight="@dimen/fragment_stock_margin_right"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="苏宁云商"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <TextView android:id="@+id/stock_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fragment_stock_margin_left"
        android:layout_marginRight="@dimen/fragment_stock_margin_right"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="sz002024"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <TextView android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/fragment_stock_divider_margin_left"
        android:layout_marginRight="@dimen/fragment_stock_divider_margin_right"
        android:background="#DC5726" />

    <TextView android:id="@+id/stock_close_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:text="收盘：7.38 (+1.37%)"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:background="@drawable/rounded_rectangle_light_gray" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fragment_stock_divider_margin_left"
        android:layout_marginRight="@dimen/fragment_stock_divider_margin_right" >

        <LinearLayout
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical" >

            <TextView android:id="@+id/stock_open_price"
                style="@style/fragment_stock_brief_text_theme"
                android:text="开盘：7.32"
                android:textColor="@color/red" />

            <TextView android:id="@+id/stock_last_price"
                style="@style/fragment_stock_brief_text_theme"
                android:layout_marginTop="5dp"
                android:text="昨收：7.28"
                android:textColor="@color/white" />

            <TextView android:id="@+id/stock_highest_price"
                style="@style/fragment_stock_brief_text_theme"
                android:layout_marginTop="5dp"
                android:text="最高：7.32"
                android:textColor="@color/red" />

            <TextView android:id="@+id/stock_lowest_price"
                style="@style/fragment_stock_brief_text_theme"
                android:layout_marginTop="5dp"
                android:text="最低：7.25"
                android:textColor="@color/green" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical" >

            <TextView android:id="@+id/stock_price_count"
                style="@style/fragment_stock_brief_text_theme"
                android:text="价格数：20"
                android:textColor="@color/white" />

            <TextView android:id="@+id/stock_tran_count"
                style="@style/fragment_stock_brief_text_theme"
                android:layout_marginTop="5dp"
                android:text="交易数：3628"
                android:textColor="@color/white" />

            <TextView android:id="@+id/stock_volume"
                style="@style/fragment_stock_brief_text_theme"
                android:layout_marginTop="5dp"
                android:text="成交量：138.5672万"
                android:textColor="@color/white" />

            <TextView android:id="@+id/stock_money"
                style="@style/fragment_stock_brief_text_theme"
                android:layout_marginTop="5dp"
                android:text="成交额：10.204亿"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.1"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:gravity="center" >

            <TextView android:id="@+id/stock_period_decorator"
                style="@style/fragment_stock_brief_text_theme"
                android:textColor="@color/black"
                android:text="周五"
                android:textSize="12sp"
                android:background="@drawable/rounded_rectangle_light_gray" />

            <TextView android:id="@+id/stock_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="开始：2014-08-01\n结束：2014-08-15"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:background="@drawable/rounded_rectangle_light_gray" />

        </LinearLayout>

    </TableRow>

</LinearLayout>
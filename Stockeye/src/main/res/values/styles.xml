<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="periodic_type_textview_theme">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:clickable">true</item>
        <item name="android:longClickable">true</item>
    </style>

    <style name="periodic_type_textview_theme_xlarge">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:clickable">true</item>
        <item name="android:longClickable">true</item>
    </style>

    <style name="stock_asset_theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="stock_asset_theme_large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="stock_count_theme_font_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="stock_count_theme_font_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="stock_count_theme_font_black_xlarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="stock_count_theme_font_white_xlarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="stock_setion_theme">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="stock_setion_theme_large">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onNavigationTabClick</item>
    </style>

    <style name="stock_self_list_op_theme">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onStockSelfListClick</item>
    </style>

    <style name="drawer_stock_list_theme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="drawer_stock_list_theme_xlarge">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="drawer_op_theme">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="fragment_stock_brief_desc_theme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="fragment_stock_brief_text_theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="fragment_stock_brief_text_large_theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">@dimen/fragment_stock_margin_left</item>
        <item name="android:layout_marginRight">@dimen/fragment_stock_margin_right</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="detailSpinnerItemTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

